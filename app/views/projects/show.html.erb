<div class="container" >
<br />


<div class="media">
  <center> <%= image_tag @project.preview.url(:large) %></center>
  <div class="media-body">
    <h2 class="media-heading">
     <%= @project.title %>
     <% if !@project.project_link == nil %> <%= link_to "Githib" , @project.project_link , class: 'btn btn-primary'%>
     <% end %>
   </h2>
    <small>
      Started : <%= @project.date_started %>
    </small>

    <%= markdown(@project.description) %>
  </div>
</div>


<%= link_to "Update", edit_project_path, class: 'btn btn-primary' %>
<%= link_to "Delete", project_path(@project) ,  method: 'delete', class: 'btn btn-warning',data: { confirm: 'Are you sure you want to delete this Project?' } %>
</div>
